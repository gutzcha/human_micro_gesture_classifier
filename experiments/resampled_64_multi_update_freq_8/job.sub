should_transfer_files = yes
transfer_input_files = /fast/ygoussha/train.sif
  
executable = /usr/bin/singularity
CmdLine = python /lustre/home/ygoussha/human_micro_gesture_classifier/run_class_finetuning.py \
    --model vit_base_patch16_224 \
    --data_set dyadic_communication_mpigroup \
    --pos_weight_path /lustre/fast/fast/ygoussha/resampled_64_multi_update_freq_8/dataset/weights.json \
    --nb_classes 17 \
    --data_path /lustre/fast/fast/ygoussha/resampled_64_multi_update_freq_8/dataset \
    --finetune /lustre/fast/fast/ygoussha/k400_finetune_videomae_pretrain_dual_patch16_224_frame_16x4_tube_mask_ratio_0.9_e100/checkpoint-99.pth \
